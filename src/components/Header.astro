---
import "../styles/global.css";
import grpLogo from "../assets/ghost-runner-pizza-logo.svg";
import { Image } from "astro:assets";
---

<style>
    .nav-list {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 1rem;
        width: 100%;
        gap: 2rem;  
    }

    .nav-item {
        list-style: none;

    }

    /* .nav-logo {
        margin-left: 10%;
        margin-right: auto;
    } */
    
    .nav-button {
        margin-right: 2rem;
        position: relative;
        display: inline-block;
        font-size: 2rem;
        font-family: "Apfel Grotezk";
        font-weight: bold;
        text-transform: uppercase;
        color: #002c2e;
        cursor: pointer;
        text-decoration: none;
        overflow: hidden;

        transition:
            background-color 0.3s ease,
            color 0.3s ease;
    }

    .nav-button::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        background-color: #002c2e;
    }


    .nav-button::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #002c2e;
        transition:
            height 0.3s ease-in-out,
            background-color 0.3s ease-in-out;
    }


    .nav-button:hover {
        color: #fff;
        transition:
            height 0.3s ease-in-out,
            background-color 0.3s ease-in-out;
    }

 
    .nav-button:hover::after {
        height: 100%;
        background-color: #002c2e;
        z-index: -1;
    }

    @media (max-width: 800px) {
        .nav-list {
            justify-content: center;
            width: 100%;
        }

        .nav-button {
            font-size: 2rem;
            margin-right: 0rem;
        }
    }
</style>

<navbar>
    <ul class="nav-list">
        <li class="nav-logo nav-item">
            <!-- <Image id='logo' src={grpLogo} alt="Logo for Ghost Runner Pizza" width="100"/> -->
        </li>
        <li class="nav-item">
            <a href="/menu" class="nav-button">Menu</a>
        </li>
        <li class="nav-item">
            <a href="/order" class="nav-button">Order Online</a>
        </li>
    </ul>
</navbar>
