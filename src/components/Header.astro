---
import "../styles/global.css";
---

<style>
    .nav-list {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 1rem;
    }

    .nav-item {
        list-style: none;
        margin-right: 2rem;
    }
</style>

<style>
    .nav-button {
        position: relative;
        display: inline-block;
        font-size: 2rem;
        font-family: "Apfel Grotezk";
        font-weight: bold;
        text-transform: uppercase;
        color: #002c2e;
        cursor: pointer;
        text-decoration: none;
        overflow: hidden;

        transition:
            background-color 0.3s ease,
            color 0.3s ease;
    }

    .nav-button::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        background-color: #002c2e;
    }

    /* Always visible bottom line */
    .nav-button::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #002c2e;
        transition:
            height 0.3s ease-in-out,
            background-color 0.3s ease-in-out;
    }

    /* Hover Effects */
    .nav-button:hover {
        color: #fff; /* Change text color to white */
        transition:
            height 0.3s ease-in-out,
            background-color 0.3s ease-in-out;
    }

    /* Expanding line to form a rectangle on hover */
    .nav-button:hover::after {
        height: 100%; /* Expands the line upwards */
        background-color: #002c2e;
        z-index: -1;
    }
</style>

<navbar>
    <ul class="nav-list">
        <li class="nav-item">
            <a href="/menu" class="nav-button">Menu</a>
        </li>
        <li class="nav-item">
            <a href="/order" class="nav-button">Order Online</a>
        </li>
    </ul>
</navbar>
