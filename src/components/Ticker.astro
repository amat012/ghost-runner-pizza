---
import '../styles/global.css';
---

<style>
    .ticker-wrap {
        width: 100%;
        overflow: hidden;
        white-space: nowrap;
        height: 2.25rem;
        background-color: #416d6f;
        margin-top: 1rem;
    }
    .ticker {
        display: flex;
        animation: marquee 20s linear infinite;
    }

    .item {
        display: flex;
        padding: 0 5rem;
        align-items: baseline;
    }

    /* Transition */
    @keyframes marquee {
        0% {
            transform: translateX(10rem);
        }
        100% {
            transform: translateX(-80%);
        }
    }

    @keyframes swap {
        0%,
        50% {
            left: 0%;
        }
        50.01%,
        100% {
            left: 100%;
        }
    }
    .item > * {
        margin: 0;
        padding: 0;
        border: 0;
        font-size: 100%;
        font: inherit;
        vertical-align: baseline;
        font-family: "Apfel Grotezk";
        margin-left: 0.25rem;
        margin-top: 0.25rem;
    }
    .item > h3 {
        color: #f7f2de;
        font-size: 1.25rem;
        font-weight: normal;
    }

    .item > h2 {
        color: #ffffff;
        font-size: 1.75rem;
        font-weight: bold;
    }

    .item > h4 {
        color: #f7f2de;
        font-size: 1rem;
        font-weight: 400;
    }
</style>

<div class="ticker-wrap">
    <ul class="ticker">
        <li class="item">
            <h3>Now Available:</h3>
            <h2>CHOCOLATE CHIP COOKIES</h2>
        </li>

        <li class="item">
            <h3>This Week's Special:</h3>
            <h2>FISHERMAN'S PIE</h2>
            <h4>
                Garlic butter, diced mozzarella, clams, capers, fresh parsley,
                lemon wedge
            </h4>
        </li>
    </ul>
</div>
