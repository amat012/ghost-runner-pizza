<style>
  .site-footer {
    padding: 3rem 5%;
    background: #f7f7f7;
    font-family: "Apfel Grotezk", sans-serif;
    border-top: 1px solid #ccc;
    margin-top: 2rem;
    flex-shrink: 0;
    width: 100%;
    margin-top: auto;
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.5rem;
  }

  .footer-nav {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav li {
    display: inline-block;
    margin-right: 1rem;
  }

  .footer-nav a {
    color: #002c2e;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: #416d6f;
  }

  .footer-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-label {
    font-size: 0.875rem;
    color: #416d6f;
    margin: 0;
  }

  .social-icons a {
    color: #002c2e;
    transition: color 0.2s ease;
  }

  .social-icons a:hover {
    color: #416d6f;
  }

  .social-icons i {
    width: 20px;
    height: 20px;
  }

  .footer-bottom {
    margin-top: 1rem;
    text-align: center;
    font-size: 0.875rem;
    color: #416d6f;
  }

  @media (max-width: 600px) {
    .footer-inner {
      flex-direction: column;
      align-items: flex-start;
    }

    .footer-right {
      flex-direction: column;
      align-items: flex-start;
    }

    .social-icons {
      display: flex;
      gap: 1rem;
    }
  }
</style>

