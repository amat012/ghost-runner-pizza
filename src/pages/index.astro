---
import { Image } from "astro:assets";
import Header from "../components/Header.astro";
import bgImage from '../images/DSCF4108.webp'
import svgOverlay from "../images/cover-div-green.svg"
import '../styles/global.css'
---

<html lang="en">
  <head>
    <title>Ghost Runner Pizza</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      /* Set the main theme color */

      /* Ensure full-screen layout */
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-color: var(--main-color); /* Set background color */
      }
	  
		img {
    		padding: 0;
    		display: block;
    		margin: 0 auto;
    		max-height: 100%;
    		max-width: 100%;
			}

      /* Sticky SVG overlay */
      .svg-overlay-container {
        position: relative;
        z-index: 1;
        width: 100%;
        height: 100vh; /* Ensure it takes the full viewport height */
      }

      .svg-overlay {
        position: sticky;
        top: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; /* Prevent interaction with the SVG */
      }

      .content {
        position: relative;
        padding-top: 100vh; /* Give enough space for the SVG to scroll out of view */
        z-index: 2;
      }0
    </style>
  </head>

  <body>
    <Header />



	<img src={bgImage.src} alt="Ghost Runner Pizza Background" />

    <!-- SVG Overlay (Sticky) -->
    <img class="svg-overlay-container" src={svgOverlay.src} alt="GRP Overlay text">

    <!-- Content Section (Scrollable) -->
    <div class="content">
      <section>
        <h1>Welcome to Ghost Runner Pizza!</h1>
        <p>Scroll down to see the effect.</p>
      </section>
      <section>
        <h1>More Content Below</h1>
        <p>Keep scrolling!</p>
      </section>
    </div>
  </body>
</html>
