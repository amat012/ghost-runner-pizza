---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Contact";
---

<style>
    .questions-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        width: min(1200px, 95%);
        margin: 4rem auto;
    }

    details {
        background-color: #f7f2de;
        border-radius: 0.5rem;
        padding: 1.5rem 2rem;
        width: 100%;
        position: relative;
    }

    details summary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
        font-family: "Apfel Grotezk", "sans serif";
        font-weight: bold;
        color: #002c2e;
        font-size: 1.5rem;
        cursor: pointer;
        list-style: none;
        padding-right: 1.5rem;
    }

    details summary::-webkit-details-marker {
        display: none;
    }

    details summary::after {
        display: none; /* Remove the existing plus/minus */
    }

    details summary .icon {
        position: absolute;
        right: 2rem;
        width: 1.5rem;
        height: 1.5rem;
    }

    details summary .icon::before,
    details summary .icon::after {
        content: '';
        position: absolute;
        background-color: #002c2e;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    /* Horizontal line */
    details summary .icon::before {
        width: 100%;
        height: 2px;
        top: 50%;
        transform: translateY(-50%);
    }

    /* Vertical line */
    details summary .icon::after {
        width: 2px;
        height: 100%;
        left: 50%;
        transform: translateX(-50%);
        transform-origin: center;
    }

    /* Animation for open state */
    details[open] summary .icon::after {
        transform: translateX(-50%) scaleY(0);
    }

    .question p {
        font-family: "Apfel Grotezk", "sans serif";
        color: #416d6f;
        font-size: 1.25rem;
        margin-top: 1rem;
        padding-right: 2rem;
    }

    /* Add subtle hover effect */
    .question:hover {
        background-color: #efe3b4;
    }

    /* Add transition for smoother open/close */
    .question[open] p {
        animation: slideDown 0.3s ease-out;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<BaseLayout>
    <div>
        <p>Test text for contact page</p>
    </div>

    <div class="questions-container">
        <details class="question">
            <summary>
                Do you have a phone number?
                <span class="icon"></span>
            </summary>
            <p>No we do not</p>
        </details>
        <details class="question">
            <summary>
                Do you do delivery?
                <span class="icon"></span>
            </summary>
            <p>No we do not do delivery</p>
        </details>
        <details class="question"></details>
    </div>
</BaseLayout>